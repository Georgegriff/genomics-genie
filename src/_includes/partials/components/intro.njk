<header class="[ intro ] [ pad-top-300 pad-bottom-max ]">
  <div class="[] [ sf-flow ]">
    <div class="[ flex-wrapper ] hero-wrap">
      <div class="hero">
        <div class="svg">
          {%- include "img/lorna.svg" %}
        </div>
        <div class="heading-wrap">
          <h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ text-800 md:text-900 leading-tight ] [
            p-name ]">{{ introHeading }}</h1>
          {% if introSummary %}
            <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
          {% endif %}
          {% if ctaButton %}
            <a class="[ button ]" href="{{ ctaButton.link }}">{{ ctaButton.text }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>